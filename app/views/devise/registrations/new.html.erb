<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mx-1 mx-md-4') do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
                      <%= f.label :name, 'Your name', class: 'form-label' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
                      <%= f.label :email, 'Your email', class: 'form-label' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br/>
                      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                      <%= f.label :password, 'Your password', class: 'form-label' %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                      <%= f.label :password_confirmation, 'Confirm password', class: 'form-label' %>
                    </div>
                  </div>

                  <div class="d-flex justify-content-between align-items-center mb-3 mb-lg-4">
                    <%= f.submit "Sign up", class: 'btn btn-primary' %>
                    Or
                    <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-outline-info' %>
                  </div>

                <% end %>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="<%= image_path 'register' %>"
                     class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
