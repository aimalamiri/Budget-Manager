<h1 class="fw-bold mb-5">Transactions</h1>
<div class="d-flex justify-content-end mb-2">
  <a class="btn btn-outline-success" href="<%= new_category_transaction_path(@category.id) %>"><i class="fa fa-plus"></i> Add Transaction</a>
</div>

<% @category.records.each do |transaction| %>
  <div class="card mb-2">
    <div class="card-header">
      <%= transaction.name %>
    </div>
    <div class="card-body">
      <%= transaction.amount %>$
    </div>
  </div>
<% end %>